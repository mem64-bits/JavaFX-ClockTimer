<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.git.mem64bits.clocktimer</groupId>
  <artifactId>ClockTimer</artifactId>
  <name>Clock Timer</name>
  <version>0.5.0</version>
  <build>
    <directory>${project.basedir}/build</directory>
    <finalName>ClockTimer</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>build-jar</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>3.6.0</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <outputFile>C:\Users\toryo\IdeaProjects\Clock Timer/build/jar/ClockTimer.jar</outputFile>
                  <transformers>
                    <transformer />
                    <transformer>
                      <mainClass>com.git.mem64bits.clocktimer.clocktimer.AppLauncher</mainClass>
                    </transformer>
                  </transformers>
                  <filters>
                    <filter>
                      <artifact>*:*</artifact>
                      <excludes>
                        <exclude>META-INF/*.SF</exclude>
                        <exclude>META-INF/*.DSA</exclude>
                        <exclude>META-INF/*.RSA</exclude>
                      </excludes>
                    </filter>
                  </filters>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
      <dependencies>
        <dependency>
          <groupId>org.openjfx</groupId>
          <artifactId>javafx-graphics</artifactId>
          <version>21.0.6</version>
          <classifier>linux</classifier>
          <scope>compile</scope>
        </dependency>
        <dependency>
          <groupId>org.openjfx</groupId>
          <artifactId>javafx-graphics</artifactId>
          <version>21.0.6</version>
          <classifier>mac</classifier>
          <scope>compile</scope>
        </dependency>
        <dependency>
          <groupId>org.openjfx</groupId>
          <artifactId>javafx-graphics</artifactId>
          <version>21.0.6</version>
          <classifier>win</classifier>
          <scope>compile</scope>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>build-jpackage</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>3.5.0</version>
            <executions>
              <execution>
                <phase>install</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>jpackage</executable>
                  <arguments>
                    <argument>--type</argument>
                    <argument>app-image</argument>
                    <argument>--dest</argument>
                    <argument>${path.jpackage}</argument>
                    <argument>--name</argument>
                    <argument>ClockTimer</argument>
                    <argument>--input</argument>
                    <argument>${path.jar}</argument>
                    <argument>--main-jar</argument>
                    <argument>ClockTimer.jar</argument>
                    <argument>--main-class</argument>
                    <argument>${main.class}</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <properties>
    <path.jar>${project.basedir}/build/jar</path.jar>
    <maven.compiler.target>25</maven.compiler.target>
    <path.jpackage>${project.basedir}/build/jpackage</path.jpackage>
    <main.class>com.git.mem64bits.clocktimer.clocktimer.AppLauncher</main.class>
    <maven.compiler.source>25</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>21.0.6</javafx.version>
  </properties>
</project>
