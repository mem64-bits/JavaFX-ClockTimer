<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.git.mem64bits.clocktimer</groupId>
  <artifactId>ClockTimer</artifactId>
  <name>Clock Timer</name>
  <version>0.5.4</version>
  <build>
    <directory>${path.build}</directory>
    <finalName>ClockTimer</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>unlock-files</id>
            <phase>pre-clean</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <echo />
                <exec>
                  <arg />
                  <arg />
                  <arg />
                  <arg />
                </exec>
              </target>
            </configuration>
          </execution>
          <execution>
            <id>assert-directories</id>
            <phase>initialize</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <mkdir />
                <mkdir />
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>build-jar</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>3.6.0</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <outputFile>${path.jar}/ClockTimer.jar</outputFile>
                  <transformers>
                    <transformer />
                    <transformer>
                      <mainClass>${main.class}</mainClass>
                    </transformer>
                  </transformers>
                  <filters>
                    <filter>
                      <artifact>*:*</artifact>
                      <excludes>
                        <exclude>META-INF/*.SF</exclude>
                        <exclude>META-INF/*.DSA</exclude>
                        <exclude>META-INF/*.RSA</exclude>
                      </excludes>
                    </filter>
                  </filters>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>build-app</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-maven-plugin</artifactId>
            <version>0.0.8</version>
            <executions>
              <execution>
                <id>create-runtime</id>
                <phase>package</phase>
                <goals>
                  <goal>jlink</goal>
                </goals>
                <configuration>
                  <mainClass>${module.name}/${main.class}</mainClass>
                  <jlinkImageName>custom-jre</jlinkImageName>
                  <stripDebug>true</stripDebug>
                  <noManPages>true</noManPages>
                  <noHeaderFiles>true</noHeaderFiles>
                  <compress>2</compress>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>3.5.0</version>
            <executions>
              <execution>
                <phase>install</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>jpackage</executable>
                  <arguments>
                    <argument>--type</argument>
                    <argument>app-image</argument>
                    <argument>--name</argument>
                    <argument>ClockTimer</argument>
                    <argument>--dest</argument>
                    <argument>${path.jpackage}</argument>
                    <argument>--runtime-image</argument>
                    <argument>${path.jre.output}</argument>
                    <argument>--input</argument>
                    <argument>${path.jar}</argument>
                    <argument>--main-jar</argument>
                    <argument>ClockTimer.jar</argument>
                    <argument>--main-class</argument>
                    <argument>${main.class}</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <properties>
    <path.jar>${path.build}/jar</path.jar>
    <maven.compiler.target>25</maven.compiler.target>
    <path.jpackage>${path.build}/jpackage</path.jpackage>
    <main.class>com.git.mem64bits.clocktimer.clocktimer.AppLauncher</main.class>
    <maven.compiler.source>25</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>21.0.6</javafx.version>
    <path.jre.output>${path.build}/custom-jre</path.jre.output>
    <module.name>com.git.mem64bits.clocktimer.clocktimer</module.name>
    <path.build>${project.basedir}/build</path.build>
  </properties>
</project>
